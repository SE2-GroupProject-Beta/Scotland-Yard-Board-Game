<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<EditText
    android:id="@+id/textInput"
    android:layout_width="170dp"
    android:layout_height="52dp"
    android:layout_marginStart="69dp"
    android:layout_marginTop="81dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="23dp"
    android:ems="10"
    android:hint="enter text"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toTopOf="@+id/textResult"
    app:layout_constraintEnd_toStartOf="@+id/sendTextButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendTextButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="17dp"
        android:text="Send"
        app:layout_constraintBottom_toTopOf="@+id/textResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textInput"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textResult"
        android:layout_width="267dp"
        android:layout_height="62dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:ems="10"
        android:hint="result"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendTextButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="The button stays responsive after sending the task to work (task sleeps for 2 sec), then if the first letter was uppercase will be transformed to lowercase and vice versa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textResult" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>