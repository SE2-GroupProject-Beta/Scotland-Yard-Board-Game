    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="117dp"
        android:layout_height="226dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gameBoardView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">


        <Button
            android:id="@+id/taxiDrawButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:text="@string/taxiButton"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/busDrawButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#009688"
            android:text="@string/busButton"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/undergroundDrawButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E1E"
            android:text="@string/undergroundButton"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/journeyTableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:onClick="jTBClicked"
            android:text="@string/journeyTableButton"
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/journeyTableLayout"
        android:layout_width="488dp"
        android:layout_height="398dp"
        android:background="#F44336"
        android:backgroundTint="#8F8B89"
        android:onClick="cJTBClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405">

        <Button
            android:id="@+id/closeJTButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:onClick="cJTBClicked"
            android:text="Close"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.937"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <TextView
            android:id="@+id/journeyTableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey Table"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />
